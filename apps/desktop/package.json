{
  "name": "@draftking/desktop",
  "private": true,
  "version": "1.0.7",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build && electron-builder --win",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "build:dir": "tsc --noEmit && vite build && electron-builder --win --dir"
  },
  "dependencies": {
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "lodash": "^4.17.21",
    "next-themes": "^0.4.4",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@draftking/ui": "*",
    "@types/lodash": "^4.17.13",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "electron": "30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "turbo-ignore": "^2.3.3",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js",
  "author": {
    "name": "LoLDraftAI"
  },
  "description": "LoLDraftAI Desktop App",
  "build": {
    "appId": "com.loldraftai.desktop",
    "extraMetadata": {
      "name": "LoLDraftAI"
    },
    "productName": "LoLDraftAI",
    "artifactName": "LoLDraftAI-${version}-Setup.${ext}",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "https://releases.loldraftai.com/latest/"
      }
    ],
    "mac": {
      "target": "dmg",
      "icon": "src/assets/icon.ico"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/icon.ico",
      "artifactName": "LoLDraftAI-${version}-Setup.${ext}"
    }
  }
}
